<h2>Gist</h2>

<p>
  Gist id
  {{one-way-input
    value = state.userInputGistId
    update = (action shelf.dispatch state 'userInputsGistId')
  }}

  <button
    {{action 'loadGist'}}
    disabled = {{or state.isLoadButtonDisabled state.isCreatingGist}}
  >
    {{if state.isLoadingGist 'Loading...' 'Load'}}
  </button>
</p>

<p>
  <button
    {{action 'createGist'}}
    disabled = {{or state.isCreateButtonDisabled state.isLoadingGist}}
  >
    {{if state.isCreatingGist 'Creating...' 'Create'}}
  </button>
</p>

<hr>

{{#if shelf.state.github.gist}}
  <h2>Lists</h2>

  <ul>
    {{#each shelf.state.github.lists as |list|}}
      <li>
        {{link-to list.slug 'lists.list' list.slug}}
      </li>
    {{/each}}
  </ul>

  <p>
    {{one-way-input
      value = state.userInputListSlug
      update = (action shelf.dispatch state 'userInputsListSlug')
    }}

    <button
      {{action 'createList'}}
      disabled = {{or state.isCreatListButtonDisabled}}
    >
      Create list
    </button>
  </p>

{{/if}}